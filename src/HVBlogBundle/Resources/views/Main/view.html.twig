{% extends "HVBlogBundle::layout.html.twig" %}

{% block title %} {{ billet.abstract }} - {{ parent() }} {% endblock %}

{% block bodylist %}

  <div class="bodylistview_lvl1">
          <div class="bodylistview_lvl2_1">
              <img src="{{ asset(billet.image.uploadDir~'/'~billet.image.id~'.'~billet.image.url) }}" alt="{{ billet.image.alt }}" style="width: 100%; height: 100%;" />
          </div>
          <div class="bodylistview_lvl2_2">
              <h2> <u>{{ billet.titre }}</u> </h2>
              <i>par {{ billet.auteur }}, rédigé le {{ billet.date|date('d/m/Y') }}</i>
              <br/>
              <div class="well bodylistview_lvl2_3">
                {{ billet.abstract }}
              </div>
          </div>
          <div class="well bodylistview_lvl2_4">
            {{ billet.contenu|raw }}
          </div>
          <p>
            <a href="{{ path('hv_blog_homepage') }}" class="btn btn-default">Retour a l'accueil</a>
            {% if is_granted('ROLE_AUTEUR') %}<a href="{{ path('hv_blog_edit',{'id':billet.id}) }}" class="btn btn-default">Modifier le billet</a>{% endif %}
            {% if is_granted('ROLE_AUTEUR') %}<a href="{{ path('hv_blog_delete',{'id':billet.id}) }}" class="btn btn-danger">Supprimer le billet</a>{% endif %}
          </p>
  </div>

{% endblock %}
